<% content_for(:title, "List | To Do") %>

<h1>Specific List: <%= @list.name %> </h1>

<% if @list.tasks.any? %> <!-- Finds all tasks -->
  <h4>Here are the tasks for this list:</h4>

  <ul>
    <% @list.tasks.each do |task| %> <!-- Loop displays all tasks -->
      <li>
        <%= task.description %> |
        <%= link_to "Edit", edit_list_task_path(@list, task) %> |
        <%= link_to "Delete", list_task_path(@list, task),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tasks yet!</p>
<% end %>


<hr>
<%= link_to "Lists", lists_path %> |
<%= link_to "Delete List", list_path(@list),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %> |
<%= link_to "New Task", new_list_task_path(@list) %>
